generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id     Int    @id @default(autoincrement())
  date   DateTime
  time   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id    Int    @id @default(autoincrement())
  name    String?
  phone   String  @unique
  password String
  isAdmin Boolean @default(false)
  appointments Appointment[]
}